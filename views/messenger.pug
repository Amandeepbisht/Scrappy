doctype html
html
  head
    title SCRAPPY
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    // Bootstrap CSS for styling and layout
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    //<link rel='stylesheet' href='./style_boot.css'>
    link(href='./../css/bootstrap.css' rel='stylesheet' type='text/css')
    link(href='./../css/style_sheet.css' rel='stylesheet' type='text/css')
  body
    .container-fluid.top
      .row
        .col
          h.app_name= `Scrappy`
          .msgNotify= newMsgs
          a(href='/myProfile')
            p.topName= user.name.split(' ')[0]
          image.top_pic(alt='my_profile' src=`${user.profilePhoto}`)
    .container.messenger_container
      
      .row.top_container
        .col-lg-7.reciever_name
          h.recipient= `${recipient.name}`
        .col-lg-5.my_profile
          a(href='/myProfile')
            button.my_profile_btn.sender_id(value=`${user._id}`) Home
      .row.bottom_container
        .col-lg-12

          .row.chat_row
            #conversation.all_msgs
            //- h3.sent_msg Hey! how are you?
            //- h3.recieved_msg I am doing good... how you doing?
            //- .recieved_msg
            //-   h3.their_msg I am good...ho you doing?
      .row.send_msgs
        .col-lg-12             
          textarea#my_message(type='my_message' required)
          button.send_btn(type='submit' value=`${recipient._id}`) SEND
script(src='https://cdnjs.cloudflare.com/ajax/libs/axios/0.20.0/axios.min.js')   
script(src='/js/sendText.js')
script(src='/js/msgNotify.js')
 