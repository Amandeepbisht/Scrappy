doctype html
head
  title SCRAPPY
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  // Bootstrap CSS for styling and layout
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
  //<link rel='stylesheet' href='./style_boot.css'>
  link(href='./../css/bootstrap.css' rel='stylesheet' type='text/css')
  link(href='./../css/style_sheet.css' rel='stylesheet' type='text/css')
.container-fluid.top
  .row
    .col
      h.app_name= `Scrappy`
      .msgNotify= newMsgs
      a(href='/myProfile').topName= user.name.split(' ')[0]
      //p.topName= user.name.split(' ')[0]
      image.top_pic(alt='my_profile' src=`/images/${user.profilePhoto}`)


.container.all_users
  .row
    a.home(href=`/myProfile`) 
      button.home_btn HOME
  .row.users
    each user in users
      .col-lg-2.col-md-4.user_card
        .profile_pic
          img(src=`images/${user.profilePhoto}`)
        .card_name
          p.user_name= user.name
          a(href=`/user/${user.id}`)
            button.send_msg_btn View Profile
script(src='js/msgNotify.js')
script(src='https://cdnjs.cloudflare.com/ajax/libs/axios/0.20.0/axios.min.js') 
