doctype html
head
  title SCRAPPY
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  // Bootstrap CSS for styling and layout
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
  //<link rel='stylesheet' href='./style_boot.css'>
  link(href='./../css/bootstrap.css' rel='stylesheet' type='text/css')
  link(rel='stylesheet' href='./../css/myMessenger_css.css')
body  
  .container-fluid.top
    .row
      .col
        h.app_name Scrappy
        p.topName= user.name.split(' ')[0]
        image.top_pic(alt='my_profile' src=`/images/${user.profilePhoto}`)
  .container.messenger_container
    .row
      .col-lg-4.left_container
        .row.home
          a.my_profile(href='/myProfile')
            button.profile_btn.sender_id(value=`${user._id}`) HOME
        .row.messenger_heading
          h3.my_chats Chats

        .row.messenger_friends
          .container-fluid.chat_list.overflow-auto
      

 
      .col-lg-8.right_container
        
          .row.reciever_name
            .col
              
              img.recipient_pic
              h.recipient
          .row.block_err_container    
          .row.chat_row
          
            #conversation.all_msgs.col-lg-12
              //- h3.sent_msg Hey! how are you?
              //- h3.recieved_msg I am doing good... how you doing?
              //- .recieved_msg
              //-   h3.their_msg I am good...ho you doing?
          .row.send_msgs
            textarea#my_message(type='my_message' required)
            button.send_btn(type='submit' value=`${friend._id}`) SEND

          

script(src='https://cdnjs.cloudflare.com/ajax/libs/axios/0.20.0/axios.min.js')  
script(src='/js/sendText.js')
script(src='/js/myMessenger.js') 
script(src='/js/block_unblock.js')
script(src="https://kit.fontawesome.com/228c19a043.js" crossorigin="anonymous")