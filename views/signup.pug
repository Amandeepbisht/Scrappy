doctype html
head
  title SCRAPPY
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  // Bootstrap CSS for styling and layout
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
  //<link rel='stylesheet' href='./style_boot.css'>
  link(href='./../css/bootstrap.css' rel='stylesheet' type='text/css')
  link(href='./../css/style_sheet.css' rel='stylesheet' type='text/css')
.container-fluid.top
  .row
    .col
      h.app_name Scrappy
.container
  
    
  .row.sign_up_container.justify-content-center
    .col-lg-6
     
      form#login_form
        .sign_up_content
          p Sign up to make new friends 
        input#register_name(type='text' placeholder='name')
        br
        br
        input#email_id(type='text' placeholder='email id')
        br
        br
        input#password(type='password' placeholder='Password')
        br
        br
        input#retype_password(type='password' placeholder='Confirm Password')
        br
        br
        input#register_city(type='text' placeholder='Current City')
        br
        br
        textarea#myself(type='myself'  form='login_form' placeholder='About Me:')
        br
        br
        select#gender_select(name='gender-select' placeholder='select gender')
          option(value='--') Select Gender
          option(value='male') Male
          option(value='female') Female
        br
        br
        label.upload_pic(for='upload_pic') Select profile pic
        input#upload_pic(type='file',accept='image/*' form='login_form' name='photo' ) 
        br
        br
        button.register_btn(type='submit') Register
        button.back_to_login_btn Back to Log In page
    .row.sign_up_err.justify-content-center
  <script src=https://cdnjs.cloudflare.com/ajax/libs/axios/0.20.0/axios.min.js></script>			
script(src='js/signup.js')
