doctype html
head
  title SCRAPPY
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  // Bootstrap CSS for styling and layout
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
  //<link rel='stylesheet' href='./style_boot.css'>
  link(href='./../css/bootstrap.css' rel='stylesheet' type='text/css')
  link(href='./../css/style_sheet.css' rel='stylesheet' type='text/css')
.container-fluid.top
  .row
    .col
      h.app_name= `Scrappy`
      .msgNotify= newMsgs
      a(href='/myProfile')
        p.topName= user.name.split(' ')[0]
      image.top_pic(alt='my_profile' src=`${user.profilePhoto}`)
.container
  .row.justify-content-center.update_page
    .col-lg-4.col-md-6.update_password_container
      form#update_form
        input#current_password(type='password' placeholder='Current Password')
        br
        br
        input#new_password(type='password' placeholder='New Password')
        br
        br
        input#confirm_new_password(type='password' placeholder='Confirm New Password')
        br
        br
        button.update_password_btn(type='submit') Save Password
        button.back_to_my_profile_btn Home
    
      



<script src=https://cdnjs.cloudflare.com/ajax/libs/axios/0.20.0/axios.min.js></script>			
